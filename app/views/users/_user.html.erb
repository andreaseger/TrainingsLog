<% div_for user do%>
	<h2><%=link_to h(user.username), edit_user_path(user)%></h2>
	<table>
	  <tr>
	    <td> email </td>
	    <td><%=h(user.email)%></td>
	  </tr>
	  <tr>
	    <td> created </td>
	    <td><%=h(user.created_at)%></td>
	  </tr>
	  <tr>
	    <td> login counter </td>
	    <td><%=h(user.login_count)%></td>
	  </tr>
	</table>
<% end %>

